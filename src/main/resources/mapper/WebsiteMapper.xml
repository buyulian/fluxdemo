<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.me.fluxstudy.dao.WebsiteDao">
    <resultMap id="BaseResultMap" type="com.me.fluxstudy.model.Website">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="alexa" property="alexa" jdbcType="INTEGER"/>
        <result column="country" property="country" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List" >
        id,
        name,
        url,
        alexa,
        country
    </sql>

    <sql id="whereCondition">
        <where>
            is_delete = 0
            <if test="id != null">
                AND id =  #{id}
            </if>
            <if test="name != null and name != '' ">
                AND name =  #{name}
            </if>
            <if test="url != null and url != '' ">
                AND url =  #{url}
            </if>
            <if test="alexa != null and alexa != '' ">
                AND alexa =  #{alexa}
            </if>
            <if test="country != null and country != '' ">
                AND country =  #{country}
            </if>
        </where>
    </sql>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM website
        WHERE id = #{id} AND is_delete = 0
    </select>

    <select id="listByCondition" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM website
        <include refid="whereCondition"/>
    </select>

    <insert id="insert" parameterType="com.me.fluxstudy.model.Website">
        INSERT INTO `website`
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null AND id != '' " >
                id,
            </if>
            <if test="name != null AND name != '' " >
                name,
            </if>
            <if test="url != null AND url != '' " >
                url,
            </if>
            <if test="alexa != null AND alexa != '' " >
                alexa,
            </if>
            <if test="country != null AND country != '' " >
                country,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null AND id != ''  " >
                #{id},
            </if>
            <if test="name != null AND name != ''  " >
                #{name},
            </if>
            <if test="url != null AND url != ''  " >
                #{url},
            </if>
            <if test="alexa != null AND alexa != ''  " >
                #{alexa},
            </if>
            <if test="country != null AND country != ''  " >
                #{country},
            </if>
        </trim>
    </insert>

    <insert id="insertByBatch" parameterType="java.util.List">
        INSERT INTO `website`
        <trim prefix="(" suffix=")" suffixOverrides="," >
              id,
              name,
              url,
              alexa,
              country,
        </trim>
        values
        <foreach collection="list" item="item" index="index" separator="," >
            <trim prefix="(" suffix=")" suffixOverrides="," >
                #{item.id},
                #{item.name},
                #{item.url},
                #{item.alexa},
                #{item.country},
            </trim>
        </foreach>
    </insert>

    <update id="updateById" parameterType="com.me.fluxstudy.model.Website">
        UPDATE website
        <set>
            <if test="id != null AND id != '' " >
                id = #{id},
            </if>
            <if test="name != null AND name != '' " >
                name = #{name},
            </if>
            <if test="url != null AND url != '' " >
                url = #{url},
            </if>
            <if test="alexa != null AND alexa != '' " >
                alexa = #{alexa},
            </if>
            <if test="country != null AND country != '' " >
                country = #{country},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="logicalDeleteById" parameterType="long">
        UPDATE website
        SET is_delete = 1
        WHERE id = #{id} AND is_delete = 0
    </update>

</mapper>